# DigBiz3 Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://digbiz3user:securepassword123@localhost:5432/digbiz3"
POSTGRES_DB=digbiz3
POSTGRES_USER=digbiz3user
POSTGRES_PASSWORD=securepassword123

# ===========================================
# REDIS CONFIGURATION  
# ===========================================
REDIS_URL="redis://:redispassword123@localhost:6379"
REDIS_PASSWORD=redispassword123

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGIN=http://localhost:8081,http://localhost:3000

# ===========================================
# STRIPE PAYMENT CONFIGURATION
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===========================================
# AI & ML SERVICES
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here
ML_SERVICE_URL=http://localhost:5000
AI_MODEL_VERSION=gpt-4

# ===========================================
# BLOCKCHAIN CONFIGURATION
# ===========================================
BLOCKCHAIN_RPC_URL=https://polygon-rpc.com
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key-here
REPUTATION_CONTRACT_ADDRESS=0x742d35Cc6634C0532925a3b8D2Fd87F8E5D4bE11
NFT_CONTRACT_ADDRESS=0x8ba1f109551bD432803012645Hac136c
ESCROW_CONTRACT_ADDRESS=0x95aD61b0a150d79219dCF64E1E6Cc01f0B64C4cE

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=digbiz3-uploads
AWS_S3_REGION=us-east-1
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===========================================
# EMAIL SERVICES
# ===========================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@digbiz3.com
SMTP_PASSWORD=your-smtp-password

# ===========================================
# SECURITY & ENCRYPTION
# ===========================================
ENCRYPTION_KEY=your-32-character-encryption-key-here
PASSWORD_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# ===========================================
# API RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # requests per window

# ===========================================
# MONITORING & LOGGING
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn-here
GRAFANA_PASSWORD=admin123

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
AWS_S3_BACKUP_BUCKET=digbiz3-backups
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG=true
MOCK_PAYMENTS=true
MOCK_AI_RESPONSES=false
ENABLE_SWAGGER=true

# ===========================================
# PRODUCTION SETTINGS (uncomment for production)
# ===========================================
# NODE_ENV=production
# DEBUG=false
# MOCK_PAYMENTS=false
# ENABLE_SWAGGER=false
# SECURE_COOKIES=true

# ===========================================
# MOBILE APP CONFIGURATION
# ===========================================
EXPO_PUBLIC_API_URL=http://localhost:3000/api/v2
EXPO_PUBLIC_AI_SERVICE_URL=http://localhost:5000
EXPO_PUBLIC_BLOCKCHAIN_ENABLED=true
EXPO_PUBLIC_AR_FEATURES_ENABLED=true

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# ADVANCED FEATURES
# ===========================================
ENABLE_VR_FEATURES=true
ENABLE_BLOCKCHAIN_VERIFICATION=true
ENABLE_AI_MATCHING=true
ENABLE_MARKET_INTELLIGENCE=true
ENABLE_PREMIUM_ANALYTICS=true

# ===========================================
# PERFORMANCE OPTIMIZATION
# ===========================================
CACHE_TTL=3600  # 1 hour in seconds
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_CONCURRENT_UPLOADS=5
COMPRESSION_ENABLED=true

# ===========================================
# COMPLIANCE & PRIVACY
# ===========================================
GDPR_COMPLIANCE=true
DATA_RETENTION_MONTHS=24
PRIVACY_MODE=enhanced
AUDIT_LOGGING=true

# ===========================================
# SCALING & INFRASTRUCTURE
# ===========================================
MAX_WORKERS=4
CLUSTER_MODE=false
LOAD_BALANCER_ENABLED=false
AUTO_SCALING=false