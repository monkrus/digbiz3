{
  "name": "digbiz3-blockchain-tests",
  "version": "1.0.0",
  "description": "Blockchain smart contract tests for DigBiz3 platform",
  "main": "hardhat.config.js",
  "scripts": {
    "test": "hardhat test",
    "test:unit": "hardhat test --grep 'Unit Tests'",
    "test:integration": "hardhat test --grep 'Integration Tests'",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:parallel": "MOCHA_PARALLEL=true hardhat test",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "deploy:local": "hardhat deploy --network hardhat",
    "deploy:mumbai": "hardhat deploy --network mumbai",
    "deploy:polygon": "hardhat deploy --network polygon",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:mainnet": "hardhat deploy --network mainnet",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "node": "hardhat node",
    "console": "hardhat console",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "size": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "flatten": "hardhat flatten",
    "export": "hardhat export",
    "typechain": "hardhat typechain",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "security:slither": "slither .",
    "security:mythril": "myth analyze contracts/",
    "security:manticore": "manticore --contract contracts/",
    "benchmark": "hardhat test --grep 'Gas Optimization'",
    "stress:mint": "node scripts/stress-tests/mint-stress-test.js",
    "stress:transfer": "node scripts/stress-tests/transfer-stress-test.js",
    "simulation:network": "hardhat test tests/simulations/network-simulation.test.js",
    "simulation:economic": "hardhat test tests/simulations/economic-simulation.test.js",
    "snapshot": "hardhat test --reporter json > test-snapshot.json",
    "watch": "nodemon --ext sol,js,ts --exec 'npm run test'",
    "ci": "npm run lint && npm run test:coverage && npm run security:slither"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "nft",
    "defi",
    "reputation",
    "identity",
    "business-cards",
    "hardhat",
    "solidity"
  ],
  "author": "DigBiz3 Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.8",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.34",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-tracer": "^2.4.0",
    "hardhat-watcher": "^2.5.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@openzeppelin/merkle-tree": "^1.0.5",
    "merkletreejs": "^0.3.9"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digbiz3/digbiz3.git",
    "directory": "backend-api/tests/blockchain"
  },
  "bugs": {
    "url": "https://github.com/digbiz3/digbiz3/issues"
  },
  "homepage": "https://github.com/digbiz3/digbiz3#readme",
  "volta": {
    "node": "18.17.0",
    "npm": "9.6.7"
  }
}